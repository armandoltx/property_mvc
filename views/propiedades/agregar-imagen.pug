extends ../layout/admin

block styles

block contenido
  div.py-10
    h1.text-4xl.my-10.font-extrabold.text-center Property
    h2.text-center.text-2xl.text-gray-500= pagina

    if errores
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

    div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
      form.space-y-8(method="POST" action="/propiedades/crear")
        input(type="hidden" name="_csrf" value= csrfToken)

        input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Publicar Propiedad")

